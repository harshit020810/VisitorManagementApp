<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.visitormanagementapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.VisitorManagementApp">
        <activity android:name=".Security.DetailVisit"></activity>
        <activity android:name=".Employee.AddVisitByEmployee" />
        <activity android:name=".Security.CheckVisit" />
        <activity android:name=".Security.AddVisitBySecurity" />
        <activity android:name=".Employee.HomeScreen" />
        <activity android:name=".Security.SecurityHomeScreen" />
        <activity android:name=".Registration.LogIn" />
        <activity android:name=".Registration.Register" />
        <activity android:name=".Registration.RegistrationActivity" />
        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>